{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "plugins": [
    "testing-library",
    "jest-dom"
  ],
  "extends": [
    "eslint:recommended",
    "standard", 
    "standard-react",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-var": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
