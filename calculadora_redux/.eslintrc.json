{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "standard-react"
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-var": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
